    </section>

    <!-- VOICE AGENT -->
    <!-- Passing "Refresh" so the agent knows what to ask -->
    <VoiceAgent 
        client:only="react" 
        agentId="agent_8801kbr4e3s1f32vwgejq4wdcezp" 
        staticPlan="Refresh"
    />

  </main>
  <Footer />
