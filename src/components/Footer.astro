---
import ContactInfo from './ContactInfo.astro';
---

<footer class="bg-carbon text-paper py-20 border-t-4 border-signal">
    <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-12">

        <!-- Brand -->
        <div class="col-span-1 md:col-span-1">
          <h3 class="text-2xl font-extrabold tracking-tight mb-4">YourHQ<span class="text-signal">.</span></h3>
          <p class="text-gray-400 text-sm leading-relaxed">Founder-led websites for Kiwi small businesses.<br/>Built in WhangƒÅrei, servicing NZ-wide.</p>
        </div>

        <!-- Links -->
        <div>
          <h4 class="text-sm font-bold font-mono uppercase tracking-widest mb-6 text-gray-500">Company</h4>
          <ul class="space-y-3 text-sm">
            <li><a href="/how-it-works" class="hover:text-white text-gray-400 transition-colors">How It Works</a></li>
            <li><a href="/pricing" class="hover:text-white text-gray-400 transition-colors">Pricing</a></li>
            <li><a href="/tradies" class="hover:text-white text-gray-400 transition-colors">For Tradies</a></li>
            <li><a href="/our-story" class="hover:text-white text-gray-400 transition-colors">Our Story</a></li>
            <li><a href="/network" class="hover:text-white text-gray-400 transition-colors">YourHQ Network</a></li>
            <li><a href="/refer" class="hover:text-white text-gray-400 transition-colors">Refer a Friend</a></li>
          </ul>
        </div>

        <!-- Legal -->
        <div>
            <h4 class="text-sm font-bold font-mono uppercase tracking-widest mb-6 text-gray-500">Legal</h4>
            <ul class="space-y-3 text-sm">
              <li><a href="/legal" class="hover:text-white text-gray-400 transition-colors">Terms & FAQ</a></li>
              <li><a href="/privacy" class="hover:text-white text-gray-400 transition-colors">Privacy Policy</a></li>
              <li><a href="/login" class="hover:text-white text-gray-400 transition-colors">Client Login</a></li>
            </ul>
        </div>

        <!-- Contact -->
        <div>
          <h4 class="text-sm font-bold font-mono uppercase tracking-widest mb-6 text-gray-500">Contact</h4>
          <ContactInfo variant="footer" />
        </div>
      </div>

      <div class="border-t border-white/10 mt-16 pt-8 text-xs text-gray-600 font-mono flex justify-between">
        <p>&copy; {new Date().getFullYear()} YourHQ Limited.</p>
        <p>Fast builds. Long-term care.</p>
      </div>
    </div>
  </footer>