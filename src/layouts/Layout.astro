---
import '../styles/global.css';
import MailingListPopup from '../components/MailingListPopup.jsx';

interface Props {
	title: string;
	description: string;
	image?: string;
	type?: string;
}

const { title, description, image, type } = Astro.props;

// Default OG image if none provided
const ogImage = image || 'https://yourhq.co.nz/og-image.jpg';
const ogType = type || 'website';

// Get current URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://yourhq.co.nz');
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-F9GHN7JTE2"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-F9GHN7JTE2');
		</script>

		<!-- Meta Pixel -->
		<script is:inline>
			!function(f,b,e,v,n,t,s)
			{if(f.fbq)return;n=f.fbq=function(){n.callMethod?
			n.callMethod.apply(n,arguments):n.queue.push(arguments)};
			if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
			n.queue=[];t=b.createElement(e);t.async=!0;
			t.src=v;s=b.getElementsByTagName(e)[0];
			s.parentNode.insertBefore(t,s)}(window, document,'script',
			'https://connect.facebook.net/en_US/fbevents.js');
			fbq('init', '2047022552508111');
			fbq('track', 'PageView');
		</script>
		<noscript is:inline><img height="1" width="1" style="display:none"
			src="https://www.facebook.com/tr?id=2047022552508111&ev=PageView&noscript=1"
		/></noscript>

		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- SEO: Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- SEO: Keywords & Author -->
		<meta name="keywords" content="website design New Zealand, Kiwi business websites, professional website builder, Northland web design, small business website, website subscription, NZ web developer, tradie websites NZ, salon website design NZ" />
		<meta name="author" content="YourHQ Limited" />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:site_name" content="YourHQ" />
		<meta property="og:locale" content="en_NZ" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />

		<!-- Favicon for Browsers -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Favicon for Google & High Res -->
		<link rel="icon" type="image/png" sizes="512x512" href="/icon.png" />

		<!-- Apple Touch Icon (Mobile home screens) -->
		<link rel="apple-touch-icon" href="/icon.png" />

		<!-- Safari Pinned Tab -->
		<link rel="mask-icon" href="/favicon.svg" color="#2563EB" />

		<!-- Preconnect for Performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		<!-- Google Fonts: Inter & Courier Prime -->
		<link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400&family=Inter:wght@400;500;800&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Plausible Analytics -->
		<script defer data-domain="yourhq.co.nz" src="https://plausible.io/js/script.js"></script>

		<!-- Allow pages to add structured data or other head content -->
		<slot name="head" />
	</head>
	<body class="bg-paper text-carbon font-sans selection:bg-frangipani selection:text-carbon">
		<slot />
		<MailingListPopup client:load excludePaths={['/google-guide']} />
	</body>
</html>

<style is:global>
  /* Global Styles */
  html {
    scroll-behavior: smooth;
  }
  
  /* Custom Scrollbar for the "Technical" feel */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #F5F5F7;
  }
  ::-webkit-scrollbar-thumb {
    background: #111111;
    border: 2px solid #F5F5F7;
  }
</style>